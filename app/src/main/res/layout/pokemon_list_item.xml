<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/default_spacing"
        android:layout_marginRight="@dimen/default_spacing"
        android:layout_marginTop="@dimen/small_spacing"
        android:layout_marginBottom="@dimen/small_spacing"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:src="@drawable/fairy"
            android:layout_marginRight="@dimen/default_spacing"
            android:scaleType="fitXY"
            android:id="@+id/type_img"
            tools:ignore="RtlHardcoded"
    />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Bulbasaur"
                android:textColor="#000000"
                android:id="@+id/pokemon_name"
                android:layout_marginBottom="@dimen/small_spacing"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/random_pokemon_desc"
                android:layout_marginBottom="@dimen/small_spacing"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon_short_stats"
                tools:text="HP:"
        />

    </LinearLayout>

</LinearLayout>